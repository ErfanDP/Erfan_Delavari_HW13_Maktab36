<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="#3757C8"
    android:padding="8dp">

    <TextView
        android:id="@+id/list_row_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/list_row_first_letter_task"
        app:layout_constraintEnd_toStartOf="@+id/list_row_description"
        app:layout_constraintStart_toEndOf="@+id/list_row_first_letter_task"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Test" />

    <TextView
        android:id="@+id/list_row_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/list_row_first_letter_task"
        app:layout_constraintTop_toBottomOf="@id/list_row_first_letter_task"
        tools:text="2007.09.17-19:45:00" />

    <TextView
        android:id="@+id/list_row_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/list_row_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/list_row_date"
        app:layout_constraintTop_toTopOf="@+id/list_row_first_letter_task"
        tools:text="test" />

    <TextView
        android:id="@+id/list_row_first_letter_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_black"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="T" />

    <TextView
        android:id="@+id/list_row_user_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_black"
        android:text="@string/user_s_username"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/list_row_date"/>

    <TextView
        android:id="@+id/list_row_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/montserrat_black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/list_row_user_string"
        app:layout_constraintStart_toEndOf="@+id/list_row_user_string"
        app:layout_constraintTop_toTopOf="@+id/list_row_user_string"
        tools:text="erfan" />


</androidx.constraintlayout.widget.ConstraintLayout>